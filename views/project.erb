<div class="col-md-6">
  <h2><%= @project.name() %></h2>
  <br>
  <h4>Volunteers</h4>
  <% @project.volunteers().each() do |volunteer| %>
    <p class="indent"><%= volunteer.name() %></p>
  <% end %>
  <br><br><br>
  <form action="/delete_project/<%= @project.id() %>" method="post">
    <div class="btn-group">
      <button class="btn btn-danger inline-block" type="submit">Delete Project</button>
    </div>
  </form>
</div>
<div class="col-md-6">
  <form action="/project/<%= @project.id() %>" method="post">
    <input name="_method" type="hidden" value="patch">
    <div class="form-group">
      <label for="name"><h4>Update Project Name</h4></label>
      <input class="form-control" type="text" name="name">
    </div>
    <h4>Select Volunteers</i></h4>
    <div class="form-group">
    <% @volunteers.each() do |volunteer| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="volunteer_ids[]" value="<%= volunteer.id() %>"><%= volunteer.name()%>
        </label>
      </div>
    <% end %>
    </div>
    <div class="btn-group">
      <button class="btn btn-primary inline-block" type="submit">Update Project</button>
    </div>
  </form>
</div>
